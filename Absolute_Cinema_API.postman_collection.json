{
	"info": {
		"name": "Absolute Cinema API",
		"description": "API Collection for Absolute Cinema Backend",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://be-ujikom.amayones.my.id/api",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@cinema.com\",\n  \"password\": \"password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				},
				{
					"name": "Get User Profile",
					"request": {
						"method": "GET",
						"header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
						"url": {
							"raw": "{{base_url}}/auth/me",
							"host": ["{{base_url}}"],
							"path": ["auth", "me"]
						}
					}
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
						"url": {
							"raw": "{{base_url}}/auth/logout",
							"host": ["{{base_url}}"],
							"path": ["auth", "logout"]
						}
					}
				}
			]
		},
		{
			"name": "Films",
			"item": [
				{
					"name": "Get All Films",
					"request": {
						"method": "GET",
						"header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
						"url": {
							"raw": "{{base_url}}/admin/films",
							"host": ["{{base_url}}"],
							"path": ["admin", "films"]
						}
					}
				},
				{
					"name": "Create Film",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Authorization", "value": "Bearer {{token}}"},
							{"key": "Content-Type", "value": "application/json"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Test Movie\",\n  \"genre\": \"Action\",\n  \"duration\": 120,\n  \"director\": \"John Doe\",\n  \"cast\": \"Actor 1, Actor 2\",\n  \"synopsis\": \"Test synopsis\",\n  \"poster\": \"https://example.com/poster.jpg\",\n  \"trailer\": \"https://youtube.com/watch?v=test\",\n  \"release_date\": \"2025-01-01\",\n  \"status\": \"now_playing\",\n  \"rating\": \"13+\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/admin/films",
							"host": ["{{base_url}}"],
							"path": ["admin", "films"]
						}
					}
				},
				{
					"name": "Update Film",
					"request": {
						"method": "PUT",
						"header": [
							{"key": "Authorization", "value": "Bearer {{token}}"},
							{"key": "Content-Type", "value": "application/json"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Updated Movie\",\n  \"duration\": 130\n}"
						},
						"url": {
							"raw": "{{base_url}}/admin/films/1",
							"host": ["{{base_url}}"],
							"path": ["admin", "films", "1"]
						}
					}
				},
				{
					"name": "Delete Film",
					"request": {
						"method": "DELETE",
						"header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
						"url": {
							"raw": "{{base_url}}/admin/films/1",
							"host": ["{{base_url}}"],
							"path": ["admin", "films", "1"]
						}
					}
				}
			]
		},
